extends layout

block content
	.main.container
		.row
			.col-md-9.col-md-offset-1
				h1.display-4.m-b-2 Nuevo croquis

				input#camera(type="file", accept="image/*", capture="camera")
				script.
					document.getElementById('camera').onchange = function (e) {
						loadImage(
							e.target.files[0],
							function (img) {
									document.body.appendChild(img);
							},
							{
								maxWidth: 800,
								canvas: true,
								cover: true
							} // Options
						);
					};
